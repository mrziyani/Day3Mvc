@model Service.DTO.RestaurantDto
@{
    ViewData["Title"] = "Supprimer un Restaurant";
}

<h1>@ViewData["Title"]</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce restaurant ?</h3>
<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nom</dt>
        <dd class="col-sm-10">@Model.Nom</dd>

        <dt class="col-sm-2">Adresse</dt>
        <dd class="col-sm-10">@Model.Adresse</dd>

        <dt class="col-sm-2">Cuisine</dt>
        <dd class="col-sm-10">@Model.Cuisine</dd>

        <dt class="col-sm-2">Note</dt>
        <dd class="col-sm-10">@Model.Note</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Confirmer la suppression" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
